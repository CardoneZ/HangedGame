<Page x:Class="AhorcadoCliente.Pages.WaitingGuest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AhorcadoCliente.Pages"
      xmlns:p="clr-namespace:AhorcadoCliente.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="WaitingGuest">

    <Grid Background="FloralWhite">
        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="160" Width="160"
               Source="pack://application:,,,/Images/PlayerIcon.png"/>
        <Label x:Name="lbWaitingPlayer" Content="{x:Static p:Resources.WaitGuestMessage}" HorizontalAlignment="Center" 
               Margin="0,380,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>
        <Button x:Name="btnLeaveMatch" Content="{x:Static p:Resources.LeaveMatchButton}" Height="35" Width="130" Margin="0,500,0,0" 
                VerticalAlignment="Top" HorizontalAlignment="Center" Click="LeaveMatch_Click"/>
    </Grid>
</Page>